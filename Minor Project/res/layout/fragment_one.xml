<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JaipurMetro" 
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ed2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="22dp"
        android:textColor="#31b6e7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageButton5"
        android:layout_below="@+id/imageButton5"
        android:text="TextView"
         android:textColor="#31b6e7" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Trains Between Imp. Stations" 
        android:background="@drawable/main"/>

    <EditText
        android:id="@+id/ed2"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/ed1"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Destination:" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/imageButton1"
        android:layout_alignLeft="@+id/imageButton5"
        android:src="@drawable/search2" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/imageButton2"
        android:src="@drawable/search2" />

    <EditText
        android:id="@+id/ed1"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton2"
        android:ems="10"
        android:hint="Source:" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ed2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/buttons"
        android:text="Generate:" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginLeft="21dp"
        android:src="@drawable/fare2" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_toRightOf="@+id/ed2"
        android:src="@drawable/time2" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/distance" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/imageButton3"
        android:text="TextView"
        android:textColor="#31b6e7" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/imageButton4"
        android:text="TextView"
        android:textColor="#31b6e7" />

</RelativeLayout>